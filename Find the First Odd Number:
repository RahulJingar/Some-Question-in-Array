#include<iostream>
using namespace std;
void linearSearch(int arr[],int size)
{
    for(int i=0;i<size;i++)
    {
        if(arr[i]%2==1)
        {
            cout<<"Find the First Odd Number:"<<arr[i]<<endl;
            cout<<"First Odd Index Number:"<<i<<" ";
            break;
        }
    }
}
int main()
{
    int arr[]={10, 22, 36, 45, 50, 67, 80};
    int size=sizeof(arr)/sizeof(arr[0]);
    linearSearch(arr,size);
}
